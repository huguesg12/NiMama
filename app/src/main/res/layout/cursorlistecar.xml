<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/display_caractere"
            android:layout_width="wrap_content"
            style="AppTheme" />

        <TextView
            android:text=" ("
            android:layout_width="wrap_content"
            style="AppTheme" />
        
        <TextView
            android:id="@+id/display_pron"
            android:layout_width="wrap_content"
            style="AppTheme" />
        
        <TextView
            android:text=")"
            android:layout_width="wrap_content"
            style="AppTheme" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/display_traduction"
        style="AppTheme" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/display_score_text"
            style="AppTheme"
            android:layout_width="wrap_content"
            android:text="@string/score" />

        <TextView
            android:id="@+id/display_score"
            style="AppTheme"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/display_nbI_text"
            style="AppTheme"
            android:layout_width="wrap_content"
            android:text="@string/nbI" />

        <TextView
            android:id="@+id/display_nbI"
            style="AppTheme"
            android:layout_width="wrap_content" />
    </LinearLayout>

</LinearLayout>